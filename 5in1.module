# -------------------------
# YouTube Premium 2025 - Nightmarket (merged)
# -------------------------

[Rule]
AND,((DOMAIN-SUFFIX,googlevideo.com), (PROTOCOL,UDP)),REJECT
AND,((DOMAIN,youtubei.googleapis.com), (PROTOCOL,UDP)),REJECT

[Url Rewrite]
# YouTube adblock / video request handling
^https?:\/\/[\w-]+\.googlevideo\.com\/initplayback.+&oad - reject-img
^https?:\/\/[\w-]+\.googlevideo\.com\/(?!(dclk_video_ads|videoplayback\?)).+&oad _ reject-200
# Universal Ad Request
^https?:\/\/(www|s)\.youtube\.com\/api\/stats\/ads _ reject-200
^https?:\/\/(www|s)\.youtube\.com\/(pagead|ptracking) _ reject-200
^https?:\/\/s\.youtube\.com\/api\/stats\/qoe\?adcontext _ reject-200
# General Video Ad request tweak (302 shortcut)
(^https?:\/\/[\w-]+\.googlevideo\.com\/(?!dclk_video_ads).+?)&ctier=L(&.+?),ctier,(.+) $1$2$3 302

[Map Local]
^https?:\/\/[\w-]+\.googlevideo\.com\/initplayback.+&oad data-type=text data="" status-code=200

[Script]
# YouTube response script — PiP / background play / captions / preview handling
youtube.response = type=http-response,pattern=^https:\/\/youtubei\.googleapis\.com\/(youtubei\/v1\/(browse|next|player|search|reel\/reel_watch_sequence|guide|account\/get_setting|get_watch))(\?(.*))?$,requires-body=1,max-size=-1,binary-body-mode=1,script-path=https://raw.githubusercontent.com/Maasea/sgmodule/master/Script/Youtube/youtube.response.js,argument="{"lyricLang":"{{{lyricLang}}}","captionLang":"{{{captionLang}}}","blockUpload":"{{{blockUpload}}}","blockImmersive":"{{{blockImmersive}}}","blockShorts":"{{{blockShorts}}}","debug":"{{{debug}}}"}"

# -------------------------
# SoundCloudPlus - Nightmarket
# -------------------------
SoundCloudGo+=type=http-response,pattern=https://api-mobile.soundcloud.com/configuration/ios,requires-body=1,script-path=https://raw.githubusercontent.com/Marol62926/MarScrpt/main/soundcloud.js

# -------------------------
# Spotify Plus - Nightmarket
# -------------------------
# JSON artist/album endpoints
spotify-json = type=http-request,pattern=^https:\/\/spclient\.wg\.spotify\.com\/(artistview\/v1\/artist|album-entity-view\/v2\/album)\/,requires-body=0,script-path=https://raw.githubusercontent.com/app2smile/rules/master/js/spotify-json.js

# Protobuf / bootstrap / customization (binary bodies)
spotify-proto = type=http-response,pattern=^https:\/\/spclient\.wg\.spotify\.com\/(bootstrap\/v1\/bootstrap|user-customization-service\/v1\/customize)$,requires-body=1,binary-body-mode=1,max-size=-1,script-path=https://raw.githubusercontent.com/app2smile/rules/master/js/spotify-proto.js,script-update-interval=0,timeout=60

# -------------------------
# Truecaller - Nightmarket
# -------------------------
Truecaller = type=http-response,pattern=^https://premium-(.+)\.truecaller\.com/v\d/(subscriptions|products/apple),requires-body=1,max-size=0,script-path=https://raw.githubusercontent.com/NightmarketServer/Shadowrocket-Module/refs/heads/main/TCPV.js

# -------------------------
# Locket Gold 🏅 - NightmarketServer
# -------------------------
[General]
user-agent = Locket/1.0.0 (iPhone; iOS 26; Scale/3.00)

# revenuecat response hook + deleteHeader for requests
revenuecat = type=http-response, pattern=^https:\/\/api\.revenuecat\.com\/.*\/(receipts$|subscribers\/[^/]+$), script-path=https://raw.githubusercontent.com/NightmarketServer/Locket/refs/heads/main/Locket.js, requires-body=true, max-size=-1, timeout=120
deleteHeader = type=http-request, pattern=^https:\/\/api\.revenuecat\.com\/.*\/(receipts|subscribers), script-path=https://raw.githubusercontent.com/NightmarketServer/Locket/refs/heads/main/deleteheader.js, timeout=120

# -------------------------
# MITM / Hostnames (gộp)
# -------------------------
[MITM]
# Append existing hostnames; giữ %APPEND% để không phá các host mặc định của cấu hình bạn đang dùng
hostname = %APPEND% -redirector*.googlevideo.com,*.googlevideo.com,www.youtube.com,s.youtube.com,youtubei.googleapis.com,api-mobile.soundcloud.com,spclient.wg.spotify.com,premium*.truecaller.com,api.revenuecat.com,raw.githubusercontent.com

# -------------------------
# Notes / Hints
# -------------------------
# • Bật MITM / SSL proxy và cho phép hostname raw.githubusercontent.com, spclient.wg.spotify.com, api-mobile.soundcloud.com, youtubei.googleapis.com, googlevideo.com, premium*.truecaller.com, api.revenuecat.com.
# • Một số script yêu cầu bộ đệm lớn (max-size=-1) hoặc timeout cao => kiểm tra timeout trong app nếu script bị lỗi.
# • QUIC: nếu app/thiết lập mạng của bạn hỗ trợ QUIC protection/QUIC passthrough, bật nó để tránh các request UDP bypass. (Bạn đã đưa phần REJECT cho UDP googlevideo / youtubei ở đầu.)
# • Luôn kiểm tra script-path URL (raw.githubusercontent.com) vẫn tồn tại; nếu gặp lỗi 404 hãy báo mình để cập nhật đường dẫn script mới.

